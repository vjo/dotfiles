[alias]
    co = checkout
    cob = checkout -b
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
	today = log --since=midnight --author='Victor Jolissaint' --oneline
